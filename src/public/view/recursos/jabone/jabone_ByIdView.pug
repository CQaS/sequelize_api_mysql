
doctype html
html(lang='en')
  head
    title jabone
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS v5.2.1
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/formCRUD.css')
  body
    .container
      h3 DATOS DEL RECURSO: jabone
      a.btn__button(href='/generarCRUD') CREAR RECURSO
      a.btn__button(href='/recursos/jabone/create') Crear jabone
      a.btn__button(href='/recursos/usuario/salir') Salir
      br
      if list != null && list.length > 0
            table.table.table-striped.table-dark
              each val, key in list
                each n in val
                  tr
                    each x,y in n
                      if (y == 'id')
                        th= ''
                      else
                        th= y
                    - break
                - break
                        
              each val, key in list
                each n in val
                  tr
                    each x,y in n
                      if (y == 'id')
                        td 
                          a.btn__button(href='/recursos/jabone/' + x + '/edit') Editar
                          a.btn__button(href='/recursos/jabone/' + x + '/delete') Eliminar
                      else
                        td= x
                  - break
      else
        p Atencion: No tienes jabone registrados!
                          
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js', integrity='sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3', crossorigin='anonymous')
