doctype html
html(lang='en')
  head
    title Registro
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS v5.2.1
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/formCRUD.css')
  body
    .container
      .row
        .form-content
          .form-items
            h3 Registro de Usuarios
            form.requires-validation(action='/recursos/usuario/actualizarUsuario', method='POST', novalidate='')
              input(type='hidden', name='id', value=`${usuario.id}`)
              #nuevodb.col
                .col-md-12
                  input#tablename.form-control(type='text', name='nombre', placeholder='Ingresa tu nombre...', value=`${usuario.nombre}`)
                  .valid-feedback E-mail valido!
                  .invalid-feedback E-mail necesario!
                .col-md-12
                  input#tablename.form-control(type='text', name='telefono', placeholder='Ingresa tu telefono...', value=`${usuario.telefono}`)
                  .valid-feedback E-mail valido!
                  .invalid-feedback E-mail necesario!
                .col-md-12
                  input#tablename.form-control(type='text', name='mail', placeholder='mail@mail.com', value=`${usuario.mail}`)
                  .valid-feedback E-mail valido!
                  .invalid-feedback E-mail necesario!
                .col-md-12
                  input#tablename.form-control(type='password', name='password', placeholder='*************')
                  .valid-feedback Password valido!
                  .invalid-feedback Password necesario!
                .form-button.mt-3
                  button#submit.btn.btn-outline-primary(type='submit') Actualizar
                  a.btn__button(href='/recursos/usuario/lista') Cancelar
                          
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js', integrity='sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js', integrity='sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz', crossorigin='anonymous')
    script(src='/js/formCRUD.js')
      
          